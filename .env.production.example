# Production Environment Variables
# Copy to .env and fill in actual values

# Discord Bot Configuration
DISCORD_BOT_TOKEN=your_bot_token_here
DISCORD_CLIENT_ID=your_client_id_here
DISCORD_CLIENT_SECRET=your_client_secret_here

# Main Discord Server
MAIN_GUILD_ID=your_main_guild_id
CONTRIBUTOR_ROLE_ID=your_contributor_role_id

# Database (TiDB Cloud)
# Format: mysql://username:password@host:4000/database
DATABASE_URL=mysql://username:password@gateway01.us-east-1.prod.aws.tidbcloud.com:4000/redshield

# Dashboard Backend (Render)
DASHBOARD_PORT=10000
DASHBOARD_BASE_URL=https://your-api.onrender.com
DASHBOARD_FRONTEND_URL=https://your-app.vercel.app

# Session
SESSION_SECRET=generate_a_secure_random_string_here

# Environment
NODE_ENV=production
